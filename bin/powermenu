#! /bin/sh

chosen=$(printf "  Power Off\n  Restart\n  Suspend\n  Log Out\n  Lock" | rofi -dmenu -i -theme-str '@import "power.rasi"')

case "$chosen" in
	"  Power Off") poweroff ;;
	"  Restart") reboot ;;
	"  Suspend") systemctl suspend ;;
	"  Log Out") loginctl terminate-user $USER ;;
	"  Lock") ~/.local/bin/lockscreen ;;
	*) exit 1 ;;
esac
